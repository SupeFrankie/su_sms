<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SMS Composer Form View -->
        <record id="view_sms_composer_form" model="ir.ui.view">
            <field name="name">sms.composer.form</field>
            <field name="model">sms.composer</field>
            <field name="arch" type="xml">
                <form string="Send SMS">
                    <sheet>
                        <group>
                            <group>
                                <field name="template_id" 
                                       domain="[('model', '=', res_model)]"
                                       invisible="not res_model"/>
                                <field name="recipient_phone" placeholder="+254712345678"/>
                            </group>
                            <group>
                                <field name="char_count" readonly="1"/>
                                <field name="sms_count" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="body" widget="text" placeholder="Type your message here..."/>
                        </group>
                        
                        <group string="Info" invisible="char_count == 0">
                            <div class="text-muted">
                                <p>Standard SMS: 160 characters = 1 SMS</p>
                                <p>Longer messages: 153 characters per SMS part</p>
                            </div>
                        </group>
                        
                        <!-- Hidden fields -->
                        <field name="res_model" invisible="1"/>
                        <field name="res_id" invisible="1"/>
                    </sheet>
                    
                    <footer>
                        <button string="Send SMS" name="action_send_sms" 
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- SMS Composer Action -->
        <record id="action_sms_composer" model="ir.actions.act_window">
            <field name="name">Send SMS</field>
            <field name="res_model">sms.composer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">form</field>
        </record>
    </data>
</odoo>