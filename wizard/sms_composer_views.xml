<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_composer_form" model="ir.ui.view">
            <field name="name">su.sms.composer.form</field>
            <field name="model">su_sms.composer</field>
            <field name="arch" type="xml">
                <form string="Send SMS">
                    <group>
                        <field name="res_model" invisible="1"/>
                        <field name="res_id" invisible="1"/>
                        <field name="recipient_phone" placeholder="+2547..."/>
                        <field name="template_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="body" placeholder="Type your message..." style="height: 150px"/>
                    </group>
                    <div class="d-flex justify-content-between">
                        <div>
                            <field name="char_count" readonly="1" class="fw-bold"/> chars
                            (<field name="sms_count" readonly="1"/> parts)
                        </div>
                    </div>
                    <footer>
                        <button string="Send SMS" 
                                name="action_send_sms" 
                                type="object" 
                                class="btn-primary" 
                                icon="fa-paper-plane"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sms_composer" model="ir.actions.act_window">
            <field name="name">Send SMS</field>
            <field name="res_model">su_sms.composer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>