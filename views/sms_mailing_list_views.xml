<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_mailing_list_form" model="ir.ui.view">
            <field name="name">sms.mailing.list.form</field>
            <field name="model">sms.mailing.list</field>
            <field name="arch" type="xml">
                <form string="Mailing List">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Mailing List Name"/></h1>
                        </div>
                        <group>
                            <field name="list_type"/>
                            <field name="department_id" invisible="list_type != 'department'"/>
                        </group>
                        <notebook>
                            <page string="Contacts">
                                <button name="%(su_sms.action_sms_import_wizard)d" 
                                        string="Import Contacts via CSV" 
                                        type="action" 
                                        class="btn-primary mb-2"
                                        context="{'default_mailing_list_id': id}"/>
                                        
                                <field name="contact_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="mobile"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_sms_mailing_list_list" model="ir.ui.view">
            <field name="name">sms.mailing.list.list</field>
            <field name="model">sms.mailing.list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="list_type"/>
                    <field name="contact_count"/>
                </list>
            </field>
        </record>

        <record id="action_sms_mailing_list" model="ir.actions.act_window">
            <field name="name">Mailing Lists</field>
            <field name="res_model">sms.mailing.list</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>