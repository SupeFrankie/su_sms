<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Kanban View -->
        <record id="view_sms_dashboard_kanban" model="ir.ui.view">
            <field name="name">sms.dashboard.kanban</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" create="false">
                    <field name="name"/>
                    <field name="status"/>
                    <field name="total_cost"/>
                    <field name="sent_count"/>
                    <field name="total_recipients"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="badge" t-att-class="record.status.raw_value == 'completed' ? 'badge-success' : 'badge-info'">
                                        <field name="status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Recipients: <field name="total_recipients"/></div>
                                    <div>Sent: <field name="sent_count"/></div>
                                    <div>Cost: KES <field name="total_cost"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Dashboard Action -->
        <record id="action_sms_dashboard" model="ir.actions.act_window">
            <field name="name">SMS Dashboard</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">kanban,list,graph,pivot</field>
            <field name="context">{
                'search_default_my_campaigns': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to the SMS System!
                </p>
                <p>
                    Start by creating your first SMS campaign.
                </p>
            </field>
        </record>

        <!-- Graph View for Dashboard -->
        <record id="view_sms_campaign_graph" model="ir.ui.view">
            <field name="name">sms.campaign.graph</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <graph string="SMS Campaign Analysis" type="bar" stacked="True">
                    <field name="sms_type_id" type="row"/>
                    <field name="sent_count" type="measure"/>
                    <field name="total_cost" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Pivot View for Dashboard -->
        <record id="view_sms_campaign_pivot" model="ir.ui.view">
            <field name="name">sms.campaign.pivot</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <pivot string="SMS Campaign Pivot">
                    <field name="sms_type_id" type="row"/>
                    <field name="status" type="col"/>
                    <field name="total_cost" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>