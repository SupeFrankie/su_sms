<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Kanban View -->
        <record id="view_sms_campaign_dashboard_kanban" model="ir.ui.view">
            <field name="name">sms.campaign.dashboard.kanban</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="0">
                    <field name="name"/>
                    <field name="status"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <field name="failed_count"/>
                    <field name="total_cost"/>
                    <field name="sms_type_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge" t-att-class="record.status.raw_value === 'completed' ? 'badge-success' : record.status.raw_value === 'draft' ? 'badge-secondary' : 'badge-info'">
                                        <field name="status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Type:</strong> <field name="sms_type_id"/>
                                        </div>
                                        <div class="col-6 text-right">
                                            <strong>Recipients:</strong> <field name="total_recipients"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <span class="text-success">✓ <field name="sent_count"/></span>
                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="text-danger">✗ <field name="failed_count"/></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong>KES <field name="total_cost"/></strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="administrator_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Dashboard Action - NEW ID to avoid conflict -->
        <record id="action_sms_dashboard_v2" model="ir.actions.act_window">
            <field name="name">SMS Dashboard</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_sms_campaign_dashboard_kanban"/>
            <field name="context">{
                'search_default_my_campaigns': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to SMS Dashboard
                </p>
                <p>
                    Create your first SMS campaign to get started.
                </p>
            </field>
        </record>
    </data>
</odoo>