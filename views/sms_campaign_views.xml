<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_campaign_list" model="ir.ui.view">
            <field name="name">sms.campaign.list</field>
            <field name="model">sms.campaign</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <list string="SMS Campaigns" decoration-info="status == 'draft'" decoration-muted="status == 'cancelled'" decoration-success="status == 'completed'">
                    <field name="name"/>
                    <field name="schedule_date"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <field name="total_cost" sum="Total Cost"/>
                    <field name="status" widget="badge" decoration-success="status == 'completed'" decoration-info="status == 'in_progress'" decoration-warning="status == 'scheduled'"/>
                    <field name="administrator_id" widget="many2one_avatar_user"/>
                </list>
            </field>
        </record>

        <record id="view_sms_campaign_form" model="ir.ui.view">
            <field name="name">sms.campaign.form.enhanced</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="SMS Campaign">
                    <header>
                        <button name="action_download_template" string="Download CSV Template" type="object" class="btn-secondary" icon="fa-download"/>
                        <button name="action_prepare_recipients" string="Prepare Recipients" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_send" string="Send Now" type="object" class="oe_highlight" invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_schedule" string="Schedule" type="object" class="btn-primary" invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="status in ['completed', 'cancelled']"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_recipients" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="total_recipients" widget="statinfo" string="Recipients"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-paper-plane" type="object">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="success_rate" widget="percentage"/></span>
                                    <span class="o_stat_text">Success</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Student Intake 2026 Announcement"/></h1>
                        </div>

                        <group>
                            <group string="Campaign Settings">
                                <field name="sms_type_id"/>
                                <field name="gateway_id"/>
                                <field name="administrator_id" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                            </group>
                            <group string="Audience">
                                <field name="target_type" widget="radio"/>
                                <field name="mailing_list_id" invisible="target_type != 'mailing_list'" required="target_type == 'mailing_list'"/>
                                <field name="import_file" filename="import_filename" invisible="target_type != 'adhoc'" required="target_type == 'adhoc'"/>
                                <field name="import_filename" invisible="1"/>
                                <field name="manual_numbers" invisible="target_type != 'manual'" required="target_type == 'manual'" placeholder="+2547..."/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Message Content">
                                <group>
                                    <field name="personalized"/>
                                    <field name="message" placeholder="Type your message here... use {name} for personalization."/>
                                    
                                    <div class="o_horizontal_separator text-muted">Statistics</div>
                                    <div class="d-flex flex-row justify-content-between alert alert-info p-2" role="alert">
                                        <div>
                                            <i class="fa fa-align-left mr-1"></i>
                                            Chars: <b id="char_count">0</b>
                                        </div>
                                        <div>
                                            <i class="fa fa-comments-o mr-1"></i>
                                            Parts: <b id="sms_parts">1</b>
                                        </div>
                                        <div>
                                            <i class="fa fa-money mr-1"></i>
                                            Est. Cost: KES <b id="estimated_cost">0.00</b>
                                        </div>
                                    </div>
                                    <div class="text-muted small mt-1">
                                        <i>Note: Cost calculation is an estimate based on recipient count.</i>
                                    </div>
                                </group>
                            </page>
                            
                            <page string="Schedule &amp; Tracking">
                                <group>
                                    <group>
                                        <field name="send_immediately"/>
                                        <field name="schedule_date" invisible="send_immediately" required="not send_immediately"/>
                                    </group>
                                    <group>
                                        <field name="sent_count"/>
                                        <field name="failed_count"/>
                                        <field name="total_cost"/>
                                        <field name="kfs5_processed" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    </form>
            </field>
        </record>

        <record id="view_sms_campaign_search" model="ir.ui.view">
            <field name="name">sms.campaign.search</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <search string="Search Campaigns">
                    <field name="name"/>
                    <field name="message"/>
                    <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                    <filter string="Scheduled" name="scheduled" domain="[('status', '=', 'scheduled')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'sms_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sms_campaign" model="ir.actions.act_window">
            <field name="name">Campaigns</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new SMS Campaign
                </p>
            </field>
        </record>
    </data>
</odoo>