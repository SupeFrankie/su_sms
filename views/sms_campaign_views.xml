<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_campaign_list" model="ir.ui.view">
            <field name="name">sms.campaign.list</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <list string="SMS Campaigns">
                    <field name="name"/>
                    <field name="sms_type_id"/>
                    <field name="schedule_date"/>
                    <field name="status"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <field name="total_cost"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <record id="view_sms_campaign_form" model="ir.ui.view">
            <field name="name">sms.campaign.form</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="SMS Campaign">
                    <header>
                        <button name="action_open_import_wizard" string="Import CSV" 
                                type="object"
                                invisible="target_type != 'adhoc' or status != 'draft'"/>
                        <button name="action_prepare_recipients" string="Process Manual Numbers" 
                                type="object"
                                invisible="target_type != 'manual' or status != 'draft'"/>
                        <button name="action_send" string="Send Now" type="object"
                                invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_schedule" string="Schedule" type="object" 
                                invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="status not in ['draft', 'scheduled']"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Campaign Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="sms_type_id"/>
                                <field name="target_type"/>
                                <field name="administrator_id"/>
                            </group>
                            <group>
                                <field name="schedule_date"/>
                                <field name="gateway_id"/>
                                <field name="send_immediately"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Message">
                                <field name="message" placeholder="Type your message here..."/>
                                <group invisible="target_type != 'manual'">
                                    <field name="manual_phone_numbers" placeholder="e.g. +254700000000, +254711111111"/>
                                </group>
                            </page>
                            <page string="Recipients">
                                <field name="recipient_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="phone_number"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sms_campaign_search" model="ir.ui.view">
            <field name="name">sms.campaign.search</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="sms_type_id"/>
                    <filter string="Draft" name="draft" domain="[('status','=','draft')]"/>
                    <filter string="Completed" name="completed" domain="[('status','=','completed')]"/>
                </search>
            </field>
        </record>

        <record id="action_sms_dashboard" model="ir.actions.act_window">
            <field name="name">SMS Dashboard</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_sms_campaign_all" model="ir.actions.act_window">
            <field name="name">All SMS Campaigns</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>