<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_campaign_list" model="ir.ui.view">
            <field name="name">sms.campaign.list</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <list string="SMS Campaigns" decoration-success="status=='completed'" decoration-info="status=='draft'">
                    <field name="name"/>
                    <field name="sms_type_id"/>
                    <field name="schedule_date"/>
                    <field name="status"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <field name="total_cost" sum="Total Cost"/>
                </list>
            </field>
        </record>

        <record id="view_sms_campaign_form" model="ir.ui.view">
            <field name="name">sms.campaign.form</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="SMS Campaign">
                    <header>
                        <button name="action_open_import_wizard" string="Import CSV" 
                                type="object" class="btn-secondary" 
                                invisible="target_type != 'adhoc' or status != 'draft'" icon="fa-upload"/>
                                
                        <button name="action_prepare_recipients" string="Process Manual Numbers" 
                                type="object" class="oe_highlight" 
                                invisible="target_type != 'manual' or status != 'draft'"/>
                                
                        <button name="action_send" string="Send Now" type="object" class="oe_highlight" 
                                invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_schedule" string="Schedule" type="object" 
                                invisible="status != 'draft' or total_recipients == 0"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="status not in ['draft', 'scheduled']"/>
                                
                        <field name="status" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. End of Semester Reminder"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="sms_type_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="target_type"/>
                                <field name="administrator_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="schedule_date" widget="datetime" options="{'datepicker': {'mode': 'datetime'}}"/>
                                <field name="gateway_id" groups="su_sms.group_sms_system_admin"/>
                                <field name="send_immediately"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Message &amp; Content">
                                <field name="message" widget="sms_counter" placeholder="Type your message here..."/>
                                
                                <group invisible="target_type != 'manual'">
                                    <field name="manual_phone_numbers" placeholder="+2547..., +2547..."/>
                                </group>
                            </page>
                            <page string="Recipients">
                                <field name="recipient_ids">
                                    <list decoration-success="status=='sent'" decoration-danger="status=='failed'">
                                        <field name="name"/>
                                        <field name="phone_number"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sms_campaign_search" model="ir.ui.view">
            <field name="name">sms.campaign.search</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                </search>
            </field>
        </record>

        <record id="action_sms_campaign_all" model="ir.actions.act_window">
            <field name="name">All SMS Campaigns</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>