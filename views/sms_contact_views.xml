<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SMS Contact List View -->
        <record id="view_sms_contact_list" model="ir.ui.view">
            <field name="name">sms.contact.list</field>
            <field name="model">sms.contact</field>
            <field name="arch" type="xml">
                <list string="SMS Contacts" decoration-muted="not active" decoration-danger="blacklisted">
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="contact_type"/>
                    <field name="student_id"/>
                    <field name="department_id"/>
                    <field name="opt_in" widget="boolean_toggle"/>
                    <field name="blacklisted" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="messages_sent"/>
                </list>
            </field>
        </record>

        <!-- SMS Contact Form View -->
        <record id="view_sms_contact_form" model="ir.ui.view">
            <field name="name">sms.contact.form</field>
            <field name="model">sms.contact</field>
            <field name="arch" type="xml">
                <form string="SMS Contact">
                    <header>
                        <button name="action_opt_in" string="Opt In" type="object" class="btn-success" invisible="opt_in"/>
                        <button name="action_opt_out" string="Opt Out" type="object" class="btn-warning" invisible="not opt_in"/>
                        <button name="action_add_to_blacklist" string="Add to Blacklist" type="object" class="btn-danger" invisible="blacklisted"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                            <button name="%(action_sms_composer)d" type="action" class="oe_stat_button" icon="fa-comment" context="{'default_recipient_phone': mobile, 'default_res_model': 'sms.contact', 'default_res_id': id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="messages_sent"/></span>
                                    <span class="o_stat_text">SMS Sent</span>
                                </div>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Blacklisted" bg_color="bg-danger" invisible="not blacklisted"/>
                        <widget name="web_ribbon" title="Opted Out" bg_color="bg-warning" invisible="opt_in or blacklisted"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Contact Name" required="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Contact Information">
                                <field name="mobile" placeholder="+254712345678" required="1"/>
                                <field name="email" placeholder="email@example.com"/>
                                <field name="contact_type"/>
                                <field name="student_id" placeholder="e.g., 123456"/>
                            </group>
                            <group string="Organization">
                                <field name="department_id"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                        </group>
                        
                        <group string="SMS Preferences">
                            <group>
                                <field name="opt_in" widget="boolean_toggle"/>
                                <field name="opt_in_date" readonly="1" invisible="not opt_in"/>
                                <field name="opt_out_date" readonly="1" invisible="opt_in"/>
                            </group>
                            <group>
                                <field name="blacklisted" readonly="1"/>
                                <field name="last_message_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Mailing Lists">
                                <field name="mailing_list_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="list_type"/>
                                        <field name="contact_count"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Clubs">
                                <field name="club_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="member_count"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Internal notes about this contact..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SMS Contact Search View -->
        <record id="view_sms_contact_search" model="ir.ui.view">
            <field name="name">sms.contact.search</field>
            <field name="model">sms.contact</field>
            <field name="arch" type="xml">
                <search string="Search SMS Contacts">
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="student_id"/>
                    <field name="department_id"/>
                    <separator/>
                    <filter string="Opted In" name="opted_in" domain="[('opt_in', '=', True)]"/>
                    <filter string="Opted Out" name="opted_out" domain="[('opt_in', '=', False)]"/>
                    <filter string="Blacklisted" name="blacklisted" domain="[('blacklisted', '=', True)]"/>
                    <separator/>
                    <filter string="Students" name="students" domain="[('contact_type', '=', 'student')]"/>
                    <filter string="Staff" name="staff" domain="[('contact_type', '=', 'staff')]"/>
                    <filter string="External" name="external" domain="[('contact_type', '=', 'external')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group>
                        <filter string="Contact Type" name="group_contact_type" context="{'group_by': 'contact_type'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Opt-in Status" name="group_opt_in" context="{'group_by': 'opt_in'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- SMS Contact Action -->
        <record id="action_sms_contact" model="ir.actions.act_window">
            <field name="name">SMS Contacts</field>
            <field name="res_model">sms.contact</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1, 'search_default_opted_in': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first SMS Contact</p>
                <p>SMS contacts are people you can send SMS messages to.</p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_sms_contacts" name="Contacts" parent="menu_sms_main" action="action_sms_contact" sequence="20"/>
    </data>
</odoo>