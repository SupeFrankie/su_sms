<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_adhoc_form" model="ir.ui.view">
            <field name="name">sms.campaign.adhoc.form</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="Ad Hoc SMS">
                    <header>
                        <button name="action_open_import_wizard" string="Upload CSV" 
                                type="object" class="oe_highlight" icon="fa-upload"
                                invisible="status != 'draft'"/>
                                
                        <button name="action_send" string="Send Now" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Campaign Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="sms_type_id" readonly="1"/>
                                <field name="administrator_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="schedule_date" widget="datetime"/>
                                <field name="gateway_id" groups="su_sms.group_sms_system_admin"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Message">
                                <field name="message" widget="sms_counter"/>
                            </page>
                            <page string="Recipients">
                                <field name="recipient_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="phone_number"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sms_adhoc" model="ir.actions.act_window">
            <field name="name">Ad Hoc SMS</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
            <field name="context" eval="{
                    'default_sms_type_id': ref('sms_type_adhoc'),
                    'default_target_type': 'adhoc',
                    'default_name': 'Ad Hoc SMS Campaign',
             }"/>
        </record>
    </data>
</odoo>