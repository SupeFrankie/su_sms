<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_gateway_configuration_list" model="ir.ui.view">
            <field name="name">sms.gateway.configuration.list</field>
            <field name="model">sms.gateway.configuration</field>
            <field name="arch" type="xml">
                <list string="SMS Gateways">
                    <field name="name"/>
                    <field name="gateway_type"/>
                    <field name="sender_id"/>
                    <field name="is_default"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_sms_gateway_configuration_form" model="ir.ui.view">
            <field name="name">sms.gateway.configuration.form</field>
            <field name="model">sms.gateway.configuration</field>
            <field name="arch" type="xml">
                <form string="SMS Gateway">
                    <header>
                        <button name="test_connection" 
                                string="Test Connection" 
                                type="object" 
                                class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Basic Information">
                                <field name="name"/>
                                <field name="gateway_type"/>
                                <field name="is_default"/>
                                <field name="active"/>
                            </group>
                            <group string="Gateway Credentials">
                                <field name="sender_id" placeholder="e.g. +254..."/>
                                <field name="api_key" password="True"/>
                                <field name="username" invisible="gateway_type != 'africastalking'" required="gateway_type == 'africastalking'"/>
                                <field name="api_url" invisible="gateway_type != 'custom'" required="gateway_type == 'custom'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sms_gateway_configuration" model="ir.actions.act_window">
            <field name="name">SMS Gateways</field>
            <field name="res_model">sms.gateway.configuration</field>
            <field name="view_mode">list,form</field> </record>

        <menuitem id="menu_sms_gateway"
                  name="Gateway Configuration"
                  parent="menu_sms_marketing_config"
                  action="action_sms_gateway_configuration"
                  sequence="10"/>
    </data>
</odoo>