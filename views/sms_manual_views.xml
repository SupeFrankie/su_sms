<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_manual_form" model="ir.ui.view">
            <field name="name">sms.campaign.manual.form</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="Manual SMS">
                    <header>
                        <button name="action_prepare_recipients" string="Process Numbers" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_send" string="Send Now" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Campaign Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="sms_type_id" readonly="1"/>
                                <field name="administrator_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="schedule_date" widget="datetime"/>
                                <field name="gateway_id" groups="su_sms.group_sms_system_admin"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Compose">
                                <group>
                                    <field name="manual_phone_numbers" placeholder="+254700000000, +254711111111"/>
                                    <field name="message" widget="sms_counter"/>
                                </group>
                            </page>
                            <page string="Recipients Status">
                                <field name="recipient_ids" readonly="1">
                                    <list>
                                        <field name="phone_number"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sms_manual" model="ir.actions.act_window">
            <field name="name">Manual SMS</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
            <field name="context" eval="{
                'default_sms_type_id': ref('sms_type_manual'),
                'default_target_type': 'manual',
                'default_name': 'Manual SMS Campaign',
            }"/>
        </record>
    </data>
</odoo>