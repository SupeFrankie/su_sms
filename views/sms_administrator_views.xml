<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_sms_administrator_list" model="ir.ui.view">
            <field name="name">sms.administrator.list</field>
            <field name="model">sms.administrator</field>
            <field name="arch" type="xml">
                <list string="SMS Administrators">
                    <field name="name"/>
                    <field name="username"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="department_id"/>
                    <field name="role_name"/>
                    <field name="total_messages"/>
                    <field name="total_spent"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_sms_administrator_form" model="ir.ui.view">
            <field name="name">sms.administrator.form</field>
            <field name="model">sms.administrator</field>
            <field name="arch" type="xml">
                <form string="SMS Administrator">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                            <button class="oe_stat_button" icon="fa-envelope" 
                                    type="object" name="action_view_messages">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="total_messages"/></span>
                                    <span class="o_stat_text">Messages</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" icon="fa-money" type="object">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">KES <field name="total_spent"/></span>
                                    <span class="o_stat_text">Total Spent</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                            <h3><field name="role_name" readonly="1"/></h3>
                        </div>
                        
                        <group>
                            <group string="User Information">
                                <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="username" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="phone" placeholder="+254712345678"/>
                            </group>
                            <group string="SMS Configuration">
                                <field name="department_id" options="{'no_create': True}" required="1"/>
                                <field name="role_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Sent Campaigns">
                                <field name="message_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="sms_type_id"/>
                                        <field name="create_date"/>
                                        <field name="status"/>
                                        <field name="total_recipients"/>
                                        <field name="sent_count"/>
                                        <field name="total_cost"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_sms_administrator_search" model="ir.ui.view">
            <field name="name">sms.administrator.search</field>
            <field name="model">sms.administrator</field>
            <field name="arch" type="xml">
                <search string="Search Administrators">
                    <field name="name"/>
                    <field name="username"/>
                    <field name="email"/>
                    <field name="department_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Role" name="group_role" context="{'group_by': 'role_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_sms_administrator" model="ir.actions.act_window">
            <field name="name">SMS Administrators</field>
            <field name="res_model">sms.administrator</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add your first SMS Administrator
                </p>
                <p>
                    SMS Administrators link users to departments for billing purposes.
                </p>
            </field>
        </record>
    </data>
</odoo>