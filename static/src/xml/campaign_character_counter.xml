<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="su_sms.SmsCampaignCharCounter" owl="1">
        <div class="o_field_text o_sms_counter_field">
            <textarea 
                class="o_input" 
                t-att-id="props.id"
                t-att-placeholder="props.placeholder"
                t-on-input="_onInput"
                t-ref="textareaRef"
                rows="4"
                style="resize: vertical; width: 100%;"
                t-att-readonly="props.readonly ? 'readonly' : undefined"
                t-att-required="props.required ? 'required' : undefined"
            >
                <t t-esc="props.record.data[props.name] or ''"/>
            </textarea>
            
            <div class="d-flex justify-content-between mt-2 text-muted small">
                <span t-att-class="state.count > 160 ? 'text-warning fw-bold' : ''">
                    <i class="fa fa-text-width"/> <t t-esc="state.count"/> chars
                </span>
                <span>
                    <i class="fa fa-envelope"/> <t t-esc="state.parts"/> SMS part(s)
                </span>
                <span>
                    <i class="fa fa-money"/> KES <t t-esc="state.cost"/> / recipient
                </span>
            </div>
        </div>
    </t>
</templates>